{
    "compilerOptions": {
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["es6", "DOM"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "ES5",
        "jsx": "react",
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@hooks/*": ["hooks/*"],
            "@components/*": ["components/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@utils/*": ["utils/*"],
            "@typings/*": ["typings/*"],
        }
    }
}